{
    "name": "template",
    "version": "1.0.0",
    "description": "React Starter",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --verbose --coverage",
        "dev": "webpack --mode development",
        "build": "rimraf dist && webpack --mode production --progress",
        "start": "webpack-dev-server --hot --mode development --open",
        "lint": "concurrently \"yarn:eslint\" \"yarn:stylelint:js\" \"yarn:stylelint:css\"",
        "eslint": "eslint src",
        "stylelint:js": "stylelint 'src/components/**/*.js' --config stylelintrc-styledcomponent.js",
        "stylelint:css": "stylelint 'src/assets/**/*.scss' --config stylelintrc-css.js",
        "prettier": "eslint --fix src",
        "analyzer": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "pre-push": "concurrently \"yarn:build\" \"yarn:test\""
        }
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "7.3.3",
        "@babel/register": "^7.4.4",
        "@hot-loader/react-dom": "^16.8.6",
        "autoprefixer": "^9.6.1",
        "babel-eslint": "^10.0.2",
        "babel-jest": "^24.8.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-import": "^1.12.0",
        "babel-plugin-styled-components": "^1.10.6",
        "concurrently": "^4.1.1",
        "css-loader": "^3.0.0",
        "css-mqpacker": "^7.0.0",
        "cssnano": "^4.1.10",
        "enzyme-adapter-react-16": "^1.14.0",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-config-standard": "^13.0.1",
        "eslint-loader": "^2.2.1",
        "eslint-nibble": "^5.1.0",
        "eslint-plugin-import": "^2.11.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.14.2",
        "eslint-plugin-standard": "^4.0.0",
        "fibers": "^4.0.1",
        "file-loader": "^4.0.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^4.0.0-beta.8",
        "husky": "^3.0.1",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.0",
        "mini-css-extract-plugin": "^0.8.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss": "^7.0.17",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.7.0",
        "pre-commit": "^1.2.2",
        "prettier": "^1.12.1",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "pug": "^3.0.1",
        "pug-loader": "^2.4.0",
        "pug-plain-loader": "^1.0.0",
        "react-test-renderer": "^16.8.6",
        "rimraf": "^2.6.3",
        "sass": "^1.22.3",
        "sass-loader": "^7.1.0",
        "speed-measure-webpack-plugin": "^1.3.1",
        "style-loader": "^0.23.1",
        "styled-components": "^4.3.2",
        "stylelint": "^10.1.0",
        "stylelint-config-recommended-scss": "^3.3.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.8.0",
        "stylelint-scss": "^3.9.2",
        "terser-webpack-plugin": "^1.3.0",
        "uglifyjs-webpack-plugin": "^2.1.3",
        "url-loader": "^2.0.1",
        "webpack": "^4.37.0",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.5",
        "webpack-dev-server": "^3.1.4"
    },
    "dependencies": {
        "foundation-sites": "^6.5.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-hot-loader": "^4.12.9",
        "react-redux": "^7.1.0",
        "redux": "^4.0.4"
    },
    "babel": {
        "plugins": [
            "react-hot-loader/babel"
        ],
        "presets": [
            "@babel/preset-react",
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "usage"
                }
            ]
        ]
    },
    "browserslist": [
        "> 1% in JP"
    ],
    "eslintConfig": {
        "root": true,
        "parser": "babel-eslint",
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 6,
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "plugins": [
            "prettier",
            "react"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "prettier/react",
            "plugin:prettier/recommended"
        ],
        "env": {
            "es6": true,
            "browser": true,
            "node": true,
            "jest": true
        },
        "overrides": [
            {
                "files": [
                    "**/*.test.js"
                ]
            }
        ],
        "globals": {
            "googletag": true,
            "ga": true,
            "ReactDOM": true
        },
        "rules": {
            "strict": 0,
            "react/react-in-jsx-scope": "off",
            "prettier/prettier": [
                "error",
                {
                    "semi": false,
                    "tabWidth": 4,
                    "printWidth": 100,
                    "singleQuote": true,
                    "bracketSpacing": true
                }
            ]
        },
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "jest": {
        "verbose": true,
        "moduleFileExtensions": [
            "js",
            "json",
            "jsx"
        ]
    }
}
