{
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@babel/core": "^7.5.5",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.5.5",
        "autoprefixer": "^9.6.1",
        "babel-eslint": "^10.0.2",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.1.0",
        "cssnano": "^4.1.10",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-config-standard": "^13.0.1",
        "eslint-nibble": "^5.1.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.0",
        "file-loader": "^4.1.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.1",
        "lint-staged": "^9.2.0",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^4.12.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss": "^7.0.17",
        "postcss-loader": "^3.0.0",
        "pre-commit": "^1.2.2",
        "prettier": "^1.18.2",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "pug": "^2.0.4",
        "pug-loader": "^2.4.0",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "uglifyjs-webpack-plugin": "^2.1.3",
        "url-loader": "^2.1.0",
        "webpack": "^4.37.0",
        "webpack-cli": "^3.3.6",
        "webpack-dev-server": "^3.7.2"
    },
    "scripts": {
        "dev": "webpack --mode development",
        "build": "webpack --mode production",
        "start": "webpack-dev-server --mode development --open",
        "lint": "eslint src",
        "stylelint": "stylelint 'src/**/*.scss'",
        "nibble": "eslint-nibble src",
        "prettier": "eslint --fix src"
    },
    "lint-staged": {
        "*.scss": [
            "stylelint",
            "git add"
        ],
        "*.js": [
            "prettier-eslint",
            "git add"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "usage"
                }
            ]
        ]
    },
    "browserslist": [
        "> 1% in JP"
    ],
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "indentation": 2
        }
    },
    "eslintConfig": {
        "root": true,
        "plugins": [
            "prettier",
            "standard"
        ],
        "extends": [
            "standard",
            "prettier",
            "prettier/standard"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "semi": false,
                    "tabWidth": 4,
                    "singleQuote": true,
                    "bracketSpacing": true
                }
            ]
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
